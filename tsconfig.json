{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "alwaysStrict": true,
    "lib": ["ES2022"],
    "noUnusedParameters": true,
    "sourceMap": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "docs", "lib"]
}
